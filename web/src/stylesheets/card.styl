.event-reveal-card
  display flex !important
  flex-direction column
  align-items stretch

.event-reveal-card-header
  display flex
  flex 1
  justify-content space-between
  align-items center

.event-reveal-card-header img
  max-height 36px

.card-reveal-footer
  display flex
  flex: 1
  align-items flex-end
  justify-content flex-end

.card-reveal-footer a
  color #FBC02D

.flex-row
  display flex
  flex: 1
  flex-direction row
  align-items center

.divider
  margin-left -20px
  margin-right -20px

.darken
  filter grayscale(50%)

.dark-primary-color
  background #689F38

.default-primary-color
  background-color #8BC34A !important

.default-primary-text-color
  color #8BC34A

.light-primary-color
  background #DCEDC8

.text-primary-color
  color #212121

.accent-color
  background-color #FBC02D !important

.primary-text-color
  color #212121 !important

.secondary-text-color
  color #727272 !important

.divider-color
  border-color #B6B6B6

.white-text
  color #FFF

.btn:hover
  background #689F38

.waves-effect.waves-accent .waves-ripple
  background #03A9F4